<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="BelzonaMobile.Controls.SearchBar"
             xmlns:CC="clr-namespace:BelzonaMobile.Controls;assembly=BelzonaMobile"
             BackgroundColor="{DynamicResource BelzonaBlue}"
             HeightRequest="80"
             >
	<ContentView.Content>
    <AbsoluteLayout Padding="0">
    
    <StackLayout Orientation="Horizontal"
                 AbsoluteLayout.LayoutBounds=".5,.5,.9,40"
                 AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
    >
    <Entry x:Name="mainEntry" 
           Placeholder="Search"
           HorizontalOptions="FillAndExpand"
           />
    <CC:FAButton Text="{x:Static CC:FA.FASearch}" 
            BackgroundColor="{DynamicResource BelzonaOrange}" 
            TextColor="White" WidthRequest="50"
            >
            </CC:FAButton>
            </StackLayout>
    </AbsoluteLayout>
	</ContentView.Content>
</ContentView>
